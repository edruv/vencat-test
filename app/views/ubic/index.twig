{% block js %}
<script type="text/javascript">
$(document).ready(function() {
	$('.act .btn-success').on('click', function(e) {
		e.preventDefault();
		var id = $(this).attr('href');
		$.ajax({
			url: '/vencat/ubicacion/getone/',
			type: 'POST',
			data: {id:id}
		})
		.done(function(ubic) {
			console.log(ubic);
		})
		.fail(function(ubic) {
			console.log("Error:" + ubic);
		});

	});
});
</script>
